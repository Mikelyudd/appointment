// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  phone     String?  @unique
  role      UserRole @default(USER)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  appointments Appointment[]

  @@map("users")
}

enum UserRole {
  USER
  ADMIN
}

model Shop {
  id           String   @id @default(uuid())
  name         String
  address      String
  phone        String
  workingHours Json     @map("working_hours") // 存储营业时间 JSON
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  services     Service[]
  appointments Appointment[]
  timeSlots    TimeSlot[]

  @@map("shops")
}

model Service {
  id          String   @id @default(uuid())
  shopId      String   @map("shop_id")
  name        String
  description String?  @db.Text
  duration    Int      // 单位：分钟
  price       Decimal  @db.Decimal(10, 2)
  category    String   @default("Body Treatment")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  shop         Shop          @relation(fields: [shopId], references: [id])
  appointments Appointment[]

  @@map("services")
}

model TimeSlot {
  id          String    @id @default(uuid())
  shopId      String    @map("shop_id")
  date        DateTime  @db.Date
  startTime   String    @map("start_time") // 例如 "09:00"
  endTime     String    @map("end_time")   // 例如 "10:00"
  isAvailable Boolean   @default(true) @map("is_available")
  timeOfDay   TimeOfDay @map("time_of_day")

  shop         Shop          @relation(fields: [shopId], references: [id])
  appointments Appointment[]

  @@map("time_slots")
}

enum TimeOfDay {
  MORNING
  AFTERNOON
  EVENING
}

model Appointment {
  id            String            @id @default(uuid())
  shopId        String            @map("shop_id")
  serviceId     String            @map("service_id")
  timeSlotId    String            @map("time_slot_id")
  userId        String?           @map("user_id")
  customerName  String            @map("customer_name")
  customerPhone String            @map("customer_phone")
  customerEmail String?           @map("customer_email")
  notes         String?           @db.Text
  status        AppointmentStatus @default(PENDING)
  date          DateTime          @db.Date
  startTime     String            @map("start_time")
  endTime       String            @map("end_time")
  createdAt     DateTime          @default(now()) @map("created_at")
  updatedAt     DateTime          @updatedAt @map("updated_at")

  user     User?    @relation(fields: [userId], references: [id])
  shop     Shop     @relation(fields: [shopId], references: [id])
  service  Service  @relation(fields: [serviceId], references: [id])
  timeSlot TimeSlot @relation(fields: [timeSlotId], references: [id])

  @@map("appointments")
}

enum AppointmentStatus {
  PENDING
  CONFIRMED
  CANCELLED
}

model Verification {
  id         String             @id @default(uuid())
  phone      String
  code       String
  status     VerificationStatus @default(PENDING)
  verifiedAt DateTime?          @map("verified_at")
  createdAt  DateTime           @default(now()) @map("created_at")
  updatedAt  DateTime           @updatedAt @map("updated_at")

  @@map("verifications")
}

enum VerificationStatus {
  PENDING
  VERIFIED
  EXPIRED
}
